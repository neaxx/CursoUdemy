@using CursoUdemy.Models;
@model List<ClienteCLS>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.ActionLink("Agregar", "Agregar", "Cliente", null, new { @class = "btn btn-primary" })

<table class="table table-bordered table-hover">

    <thead>
        <tr>
            <td width="10%">@Html.LabelFor(p=>Model[0].iidcliente)</td>
            <td width="10%">@Html.LabelFor(p => Model[0].nombre)</td>
            <td width="20%">@Html.LabelFor(p => Model[0].apPaterno)</td>
            <td width="20%">@Html.LabelFor(p => Model[0].apMaterno)</td>
            <td width="20%">@Html.LabelFor(p => Model[0].email)</td>
            <td width="40%">@Html.LabelFor(p => Model[0].telefonoCelular)</td>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model) {
        <tr>
            <td>@item.iidcliente</td>
            <td>@item.nombre</td>
            <td>@item.apPaterno</td>
            <td>@item.apMaterno</td>
            <td>@item.email</td>
            <td>@item.telefonoCelular</td>
        </tr>
        }

    </tbody>

</table>